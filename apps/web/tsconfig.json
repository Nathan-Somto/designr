{
  "extends": "@designr/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "#/*": ["src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.js"
  ],
  "exclude": ["node_modules"]
}
